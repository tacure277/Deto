<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/negro"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¿Qué idea tienes?"
            android:textSize="24sp"
            android:textColor="@color/blanco"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comparte tu idea, duda o problema."
            android:textSize="14sp"
            android:textColor="@color/gris_claro"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Título"
            android:textSize="16sp"
            android:textColor="@color/verde_claro"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="@color/verde_claro"
            app:boxStrokeWidth="2dp"
            app:boxStrokeWidthFocused="2dp"
            app:boxCornerRadiusTopStart="28dp"
            android:textColorHint="@color/gris_claro"
            app:boxCornerRadiusTopEnd="28dp"
            app:boxCornerRadiusBottomStart="28dp"
            app:boxCornerRadiusBottomEnd="28dp"
            app:boxBackgroundColor="@color/gris_oscuro"
            android:layout_marginBottom="24dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:inputType="text"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                android:hint="Ej: App para mascotas" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción"
            android:textSize="16sp"
            android:textColor="@color/verde_claro"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="@color/verde_claro"
            app:boxStrokeWidth="2dp"
            app:boxStrokeWidthFocused="2dp"
            app:boxCornerRadiusTopStart="28dp"
            app:boxCornerRadiusTopEnd="28dp"
            app:boxCornerRadiusBottomStart="28dp"
            app:boxCornerRadiusBottomEnd="28dp"
            android:textColorHint="@color/gris_claro"
            app:boxBackgroundColor="@color/gris_oscuro"
            android:layout_marginBottom="24dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="5"
                android:maxLines="8"
                android:inputType="textMultiLine"
                android:gravity="top"
                android:textColor="@color/blanco"
                android:textColorHint="@color/gris_claro"
                android:textSize="15sp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                android:hint="¿Tienes algo en mente?" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Imagen (opcional)"
            android:textSize="16sp"
            android:textColor="@color/verde_claro"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardSeleccionarImagen"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/verde_claro"
            app:cardBackgroundColor="@color/gris_oscuro"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/imgPreview"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@android:drawable/ic_menu_gallery"
                    android:visibility="gone"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/icSubirImagen"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@android:drawable/ic_menu_camera"
                    android:tint="@color/verde_medio"
                    tools:ignore="UseAppTint" />

                <TextView
                    android:id="@+id/tvSubirImagen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Subir imagen"
                    android:textSize="14sp"
                    android:textColor="@color/verde_claro"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardPreview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/verde_claro"
            app:cardBackgroundColor="@color/gris_oscuro"
            android:visibility="gone"
            android:layout_marginBottom="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgPreviewGrande"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnQuitarImagen"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="8dp"
                    app:icon="@android:drawable/ic_menu_close_clear_cancel"
                    app:iconGravity="textStart"
                    app:iconTint="@color/blanco"
                    app:backgroundTint="@color/gris_medio"
                    app:cornerRadius="20dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp" />

            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="32dp"
            android:background="@color/gris_oscuro"
            android:padding="16dp"
            app:cardCornerRadius="28dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Publicar anónimamente"
                    android:textSize="15sp"
                    android:textColor="@color/blanco"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tu nombre no será visible"
                    android:textSize="12sp"
                    android:textColor="@color/gris_claro"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switchAnonimo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:thumbTint="@color/verde_claro"
                app:trackTint="@color/verde_oscuro" />

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPublicar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Publicar"
            android:textSize="16sp"
            android:textColor="@color/negro"
            android:textStyle="bold"
            app:backgroundTint="@color/verde_claro"
            app:rippleColor="@color/verde_medio"
            app:cornerRadius="28dp"
            android:elevation="4dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancelar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:text="Cancelar"
            android:textSize="16sp"
            android:textColor="@color/verde_claro"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:strokeColor="@color/verde_claro"
            app:strokeWidth="2dp"
            app:rippleColor="@color/verde_medio"
            app:cornerRadius="28dp" />

    </LinearLayout>

</ScrollView>